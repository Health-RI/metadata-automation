@prefix dash: <http://datashapes.org/dash#> .
@prefix dcat1: <https://www.w3.org/ns/dcat#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix hri: <http://data.health-ri.nl/core/p2/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

hri:RelationshipShape a sh:NodeShape ;
    sh:property [ dash:editor dash:URIEditor ;
            dash:viewer dash:URIViewer ;
            sh:description "A related resource." ;
            sh:minCount 1 ;
            sh:name "relation" ;
            sh:nodeKind sh:IRI ;
            sh:order 1 ;
            sh:path dct:relation ],
        [ dash:editor dash:URIEditor ;
            dash:viewer dash:URIViewer ;
            sh:description "The function of an entity or agent with respect to another entity or resource." ;
            sh:minCount 1 ;
            sh:name "had role" ;
            sh:nodeKind sh:IRI ;
            sh:order 0 ;
            sh:path dcat1:hadRole ] ;
    sh:targetClass hri:Relationship,
        dcat1:Relationship .

