@prefix dash: <http://datashapes.org/dash#> .
@prefix hri: <http://data.health-ri.nl/core/p2/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

hri:KindShape a sh:NodeShape ;
    sh:property [ dash:editor dash:URIEditor ;
            dash:viewer dash:URIViewer ;
            sh:description "To specify a uniform resource locator associated with the object." ;
            sh:name "contact page" ;
            sh:nodeKind sh:IRI ;
            sh:order 0 ;
            sh:path vcard:hasURL ],
        [ dash:editor dash:TextAreaEditor ;
            dash:viewer dash:LiteralViewer ;
            sh:datatype xsd:string ;
            sh:description "The formatted text corresponding to the name of the object." ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "formatted name" ;
            sh:nodeKind sh:Literal ;
            sh:order 2 ;
            sh:path vcard:fn ],
        [ dash:editor dash:URIEditor ;
            dash:viewer dash:URIViewer ;
            sh:description "To specify the electronic mail address for communication with the object." ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "has email" ;
            sh:nodeKind sh:IRI ;
            sh:order 1 ;
            sh:path vcard:hasEmail ;
            sh:pattern "^mailto:.+@.+\\..+$" ] ;
    sh:targetClass hri:Kind,
        vcard:Kind .

